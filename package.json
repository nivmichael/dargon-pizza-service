{
  "name": "pizza-service",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "start:server": "cd server && npm run dev",
    "start:client": "cd client && npm start",
    "dev": "concurrently \"npm run start:server\" \"npm run start:client\"",
    "install:all": "npm install && cd server && npm install && cd ../client && npm install"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
} 